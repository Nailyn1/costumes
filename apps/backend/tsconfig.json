{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",

    "target": "ES2023",
    "rootDir": "src",
    "outDir": "dist",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "sourceMap": true,
    "incremental": true,

    "removeComments": true,

    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
