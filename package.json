{
  "name": "costumes",
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "shared"
  ],
  "overrides": {
    "zod": "4.3.5"
  },
  "scripts": {
    "dev:shared": "tsc -b shared --watch",
    "dev:backend": "nest start backend --watch",
    "start:dev": "concurrently \"npm run dev:shared\" \"npm run dev:backend\"",
    "build": "nest build backend"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "dependencies": {
    "zod": "4.3.5"
  }
}
